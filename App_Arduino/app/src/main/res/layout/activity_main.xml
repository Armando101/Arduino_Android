<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C5CAE9">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cvManana"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_tarjeta1"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:src="@drawable/car_md"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/blue"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@mipmap/blue"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="110dp"
                        />

                    <ImageButton
                        android:id="@+id/auto"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@mipmap/car_atm"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="89dp"
                        />
                    <ImageButton
                        android:id="@+id/info"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@mipmap/data"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="40dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/Creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Armando Rivera &amp; Tensin"
            android:layout_gravity="bottom|left"
            android:textSize="18dp"
            android:layout_marginRight="30dp"
            />

        <ImageButton
            android:layout_marginTop="100dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@mipmap/left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp"
            />

        <ImageButton
            android:layout_marginTop="100dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@mipmap/rigth"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="250dp"
            />

        <ImageButton
            android:layout_marginTop="40dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@mipmap/up"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="160dp"
            />

        <ImageButton
            android:layout_marginTop="170dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@mipmap/down"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="160dp"
            />


        <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/margen_boton"
        android:layout_marginBottom="@dimen/margen_boton"
        android:src="@drawable/stop"
        app:elevation="@dimen/float_button"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:id="@+id/miFAB"
        />

    </FrameLayout>

</RelativeLayout>